{
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "pyokotify ~/.claude/hooks/character.png --claude-hooks -d 8 -p 200"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "pyokotify ~/.claude/hooks/character.png --claude-hooks -t '[$dir:$branch] Done!' -d 5"
          }
        ]
      }
    ]
  }
}
